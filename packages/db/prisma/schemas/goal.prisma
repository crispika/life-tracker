model Goal {
  id          String    @id @default(cuid())
  key         String    @unique // 8字符缩写，如 WK, HT, RX
  summary     String    // 目标名称
  description String?   // 目标描述
  color       String    // 颜色
  sequence    Int       @default(0) // 当前序列号，用于生成项目编号
  status      GoalStatus @default(ACTIVE) // 目标状态
  
  // 树形结构关系
  parentId    String?   // 父目标ID
  parent      Goal?     @relation("GoalToGoal", fields: [parentId], references: [id], onDelete: SetNull)
  children    Goal[]    @relation("GoalToGoal")
  
  // 关联项目
  projects    Project[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([parentId])
}

enum GoalStatus {
  ACTIVE
  INACTIVE
  COMPLETED
  ARCHIVED
}